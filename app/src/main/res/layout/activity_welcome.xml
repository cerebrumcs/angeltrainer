<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeActivity">

    <ImageView
        android:id="@+id/imvBackground"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/background_1920_1080" />

    <Button
        android:id="@+id/btnTrain"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="185dp"
        android:layout_height="60dp"
        android:layout_marginBottom="56dp"
        android:background="#ffffff"
        android:text="Train"
        android:textColor="#000"
        app:layout_constraintBottom_toTopOf="@+id/btnStatistics"

        app:layout_constraintEnd_toStartOf="@+id/imvBackground"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imvBackground"
        app:layout_constraintTop_toBottomOf="@+id/imvBackground" />

    <Button
        android:id="@+id/btnStatistics"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="185dp"
        android:layout_height="60dp"
        android:background="#fff"
        android:text="Statistics"
        android:textColor="#000"
        app:layout_constraintBottom_toTopOf="@+id/imvBackground"
        app:layout_constraintEnd_toStartOf="@+id/imvBackground"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imvBackground"
        app:layout_constraintTop_toBottomOf="@+id/btnTrain" />


</android.support.constraint.ConstraintLayout>